<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    android:id="@+id/root"
    android:layout_width="fill_parent" 
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textSize="32sp"
            android:textColor="#FFFFFFFF"
            />
        <TextView
            android:id="@+id/version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="#FFFFFFFF"
            android:layout_marginLeft="5dp"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/scandit_url"
        android:textSize="20sp"
        android:textColor="#FFFFFFFF"
        android:layout_marginBottom="15dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        />

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp">
        <Button
            android:id="@+id/fullscreen_button"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/full_screen_scan_view"
            android:layout_marginBottom="5dp"
            />

        <LinearLayout
            android:id="@+id/small_buttons"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/scaled_button"
                android:layout_width="fill_parent"
                android:layout_weight="1.0"
                android:layout_height="wrap_content"
                android:text="@string/scaled"
                    android:layout_marginRight="3dp"
                />

            <Button
                android:id="@+id/cropped_button"
                android:layout_width="fill_parent"
                android:layout_weight="1.0"
                android:layout_height="wrap_content"
                android:text="@string/cropped"
                android:layout_marginLeft="3dp"
                />
        </LinearLayout>
        <Button
            android:id="@+id/settings"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/settings"
            android:layout_marginTop="5dp" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/picker_activity"
            android:id="@+id/launch_picker_activity"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="20dp" />

    </LinearLayout>
</RelativeLayout>

